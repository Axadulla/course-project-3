{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
            <h1 class="text-2xl font-bold mb-6 text-center text-purple-700">Welcome back</h1>

            {% if error %}
                <div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post">
                <div class="mb-4">
                    <label class="block text-gray-700 font-medium mb-1">Email</label>
                    <input
                        type="email"
                        name="email"
                        value="{{ last_username }}"
                        placeholder="you@example.com"
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500"
                        required autofocus
                    >
                </div>

                <div class="mb-4">
                    <label class="block text-gray-700 font-medium mb-1">Password</label>
                    <input
                        type="password"
                        name="password"
                        placeholder="Your password"
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500"
                        required
                    >
                </div>

                <div class="mb-4 flex items-center">
                    <input type="checkbox" name="_remember_me" class="mr-2">
                    <label class="text-sm text-gray-700">Remember me</label>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button
                    type="submit"
                    class="w-full bg-purple-700 text-white py-2 px-4 rounded-lg hover:bg-purple-800 transition"
                >
                    Log in
                </button>
            </form>

            <div class="text-center mt-4 text-sm text-gray-600">
                Don't have an account?
                <a href="{{ path('app_register') }}" class="text-purple-600 hover:underline">Register</a>
            </div>
        </div>
    </div>
{% endblock %}
