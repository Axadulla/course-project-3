{% extends 'base.html.twig' %}

{% block title %}Создать форму{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 dark:bg-gray-900 flex justify-center py-12 px-4">
        <div class="w-full max-w-2xl bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-8">
            <h1 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6 border-b border-gray-300 dark:border-gray-600 pb-2">Новая форма</h1>

            {{ form_start(form) }}

            <div class="space-y-6">
                {{ form_row(form.title, {
                    label_attr: { class: 'block text-gray-700 dark:text-gray-200 text-base font-semibold mb-1' },
                    attr: {
                        class: 'w-full border border-gray-400 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white rounded-lg shadow-sm px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-purple-500'
                    }
                }) }}

                {{ form_row(form.description, {
                    label_attr: { class: 'block text-gray-700 dark:text-gray-200 text-base font-semibold mb-1' },
                    attr: {
                        class: 'w-full border border-gray-400 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white rounded-lg shadow-sm px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-purple-500'
                    }
                }) }}

                <div class="flex items-center space-x-3">
                    {{ form_widget(form.isPublic, {
                        attr: {
                            class: 'h-5 w-5 text-purple-600 focus:ring-purple-500 border-gray-300 dark:border-gray-600 dark:bg-gray-700 rounded'
                        }
                    }) }}
                    {{ form_label(form.isPublic, null, {
                        label_attr: { class: 'text-gray-700 dark:text-gray-200 text-base font-semibold' }
                    }) }}
                </div>
            </div>

            <div class="mt-8">
                <button type="submit" class="bg-purple-600 hover:bg-purple-700 dark:hover:bg-purple-500 text-white text-base font-semibold px-6 py-3 rounded-lg shadow-md focus:outline-none focus:ring-2 focus:ring-purple-500">
                    Создать
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
