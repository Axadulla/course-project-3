{% extends '../base.html.twig' %}

{% block title %}Редактировать шаблон формы{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 flex justify-center py-12 px-4">
        <div class="w-full max-w-2xl bg-white rounded-2xl shadow-lg p-8">
            <h1 class="text-2xl font-semibold text-gray-900 mb-6 border-b pb-2">Редактировать форму</h1>

            {{ form_start(form) }}

            <div class="space-y-6">
                {{ form_row(form.title, {
                    label_attr: { class: 'block text-gray-700 text-base font-semibold mb-1' },
                    attr: {
                        class: 'w-full border border-gray-400 bg-gray-50 rounded-lg shadow-sm px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-purple-500'
                    }
                }) }}

                {{ form_row(form.description, {
                    label_attr: { class: 'block text-gray-700 text-base font-semibold mb-1' },
                    attr: {
                        class: 'w-full border border-gray-400 bg-gray-50 rounded-lg shadow-sm px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-purple-500'
                    }
                }) }}

                {# если есть поле isPublic #}
                {% if form.isPublic is defined %}
                    {{ form_row(form.isPublic, {
                        label_attr: { class: 'block text-gray-700 text-base font-semibold mb-1' }
                    }) }}
                {% endif %}
            </div>

            <div class="mt-8">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white text-base font-semibold px-6 py-3 rounded-lg shadow-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    Сохранить изменения
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
