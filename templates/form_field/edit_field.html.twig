{% extends '/base.html.twig' %}

{% block title %}Редактировать поля формы{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 dark:bg-gray-900 py-10 px-4 flex justify-center">
        <div class="w-full max-w-3xl bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-8">
            <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6 border-b border-gray-300 dark:border-gray-700 pb-2">
                Редактировать: {{ formTemplate.title }}
            </h2>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            <div>
                {{ form_label(form.label, null, {
                    'label_attr': {
                        'class': 'block text-gray-700 dark:text-gray-200 font-semibold mb-1'
                    }
                }) }}
                {{ form_widget(form.label, {
                    'attr': {
                        'class': 'w-full rounded-lg border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white px-4 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500'
                    }
                }) }}
            </div>

            <div>
                {{ form_label(form.type, null, {
                    'label_attr': {
                        'class': 'block text-gray-700 dark:text-gray-200 font-semibold mb-1'
                    }
                }) }}
                {{ form_widget(form.type, {
                    'attr': {
                        'class': 'w-full rounded-lg border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white px-4 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500'
                    }
                }) }}
            </div>

            <div>
                {{ form_label(form.optionsRaw, null, {
                    'label_attr': {
                        'class': 'block text-gray-700 dark:text-gray-200 font-semibold mb-1'
                    }
                }) }}
                {{ form_widget(form.optionsRaw, {
                    'attr': {
                        'class': 'w-full rounded-lg border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white px-4 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500'
                    }
                }) }}
                <small class="text-sm text-gray-500 dark:text-gray-400">Введите JSON-массив или список через запятую для select/radio</small>
            </div>

            <div class="flex items-center space-x-2">
                {{ form_widget(form.required, {
                    'attr': {
                        'class': 'h-5 w-5 text-purple-600 border-gray-300 dark:border-gray-600 dark:bg-gray-700 rounded'
                    }
                }) }}
                {{ form_label(form.required, null, {
                    'label_attr': {
                        'class': 'text-gray-700 dark:text-gray-200 font-semibold'
                    }
                }) }}
            </div>

            <div>
                {{ form_label(form.order, null, {
                    'label_attr': {
                        'class': 'block text-gray-700 dark:text-gray-200 font-semibold mb-1'
                    }
                }) }}
                {{ form_widget(form.order, {
                    'attr': {
                        'class': 'w-full rounded-lg border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white px-4 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500'
                    }
                }) }}
            </div>

            <div>
                {{ form_widget(form.save, {
                    'attr': {
                        'class': 'bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition text-base font-semibold shadow-md'
                    }
                }) }}
            </div>

            {{ form_end(form) }}

            <hr class="my-10 border-gray-300 dark:border-gray-700">

            <h4 class="text-xl font-semibold text-gray-800 dark:text-white mb-4">Существующие поля:</h4>

            {% if fields is empty %}
                <p class="text-gray-600 dark:text-gray-400">Нет добавленных полей.</p>
            {% else %}
                <ul class="space-y-3">
                    {% for field in fields %}
                        <li class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg border border-gray-200 dark:border-gray-600 shadow-sm">
                            <div class="flex justify-between items-center">
                                <div>
                                    <strong class="text-gray-900 dark:text-white">{{ field.label }}</strong>
                                    <span class="text-sm text-gray-500 dark:text-gray-400">({{ field.type }})</span>
                                </div>
                                <div class="flex space-x-4">
                                    <a href="{{ path('form_field_update', { id: field.id }) }}"
                                       class="text-purple-600 hover:underline font-medium text-sm">Редактировать</a>
                                    <a href="{{ path('form_template_view', { id: formTemplate.id }) }}"
                                       class="text-blue-600 hover:underline font-medium text-sm">Посмотреть</a>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
{% endblock %}
